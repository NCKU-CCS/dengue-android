<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#ff0000">


        <!--ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goback"
            android:background="@color/colorPrimary"
            android:src="@mipmap/go_back"
            android:contentDescription="@string/goack"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true" /-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/breedingSources_title"
            android:textColor="#ffffff"
            android:textSize = "24sp"
            android:id="@+id/title"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:paddingBottom="40dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/breedingSources_img"
                android:contentDescription="@string/img"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/breedingSources_submit_type"
                android:id="@+id/breedingSources_submit_type_text" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/button_hb"
                    android:src="@drawable/home_bottle" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/button_ob"
                    android:src="@drawable/outdoor_bottle" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/button_og"
                    android:src="@drawable/outdoor_grass" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/breedingSources_submit_description"
                android:id="@+id/breedingSources_submit_description_text"
                android:layout_marginTop="20dp"
                android:layout_weight="0.21" />
<!--
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/breedingSources_submit_type_value"
                android:spinnerMode="dropdown" />
                -->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/breedingSources_submit_description_value" />

            <Button
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:text="@string/breedingSources_submit_button"
                android:id="@+id/breedingSources_submit_submit"
                android:background="#ff0000"
                android:textColor="#ffffff"
                android:textSize = "18sp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/menu"
            android:background="@color/menuBackground"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>


</LinearLayout>