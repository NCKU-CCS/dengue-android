<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goback"
            android:background="@color/colorPrimary"
            android:src="@mipmap/go_back"
            android:contentDescription="@string/goBack"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/breedingSources_title"
            android:id="@+id/title"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorText"
            android:layout_marginRight="55dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/breedingSources_photo_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />

    <Button
        android:id="@+id/breedingSources_photo_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/breedingSources_photo_camera"
        android:layout_weight="0.02"
        android:layout_gravity="center_vertical"
        />

    <Button
        android:id="@+id/breedingSources_photo_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/breedingSources_photo_photo"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.02" />

</LinearLayout>